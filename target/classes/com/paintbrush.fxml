    <VBox spacing="2" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <HBox spacing="5" styleClass="color-palette">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <ColorPicker fx:id="colorPicker" styleClass="color-picker-advanced" />
            <ToggleButton styleClass="color-button" fx:id="blackColorBtn">
                <toggleGroup>
                    <ToggleGroup fx:id="colorToggleGroup" />
                </toggleGroup>
                <graphic>
                    <Rectangle width="30" height="30" fill="black" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="whiteColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#ffffff" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="redColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#FF4444" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="greenColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#44FF44" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="blueColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#4444FF" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="yellowColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#FFFF44" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="magentaColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#FF44FF" />
                </graphic>
            </ToggleButton>
            <ToggleButton styleClass="color-button" fx:id="cyanColorBtn" toggleGroup="$colorToggleGroup">
                <graphic>
                    <Rectangle width="30" height="30" fill="#44FFFF" />
                </graphic>
            </ToggleButton>
        </HBox>
    </VBox>

    <VBox styleClass="tools-panel" spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <padding>
            <Insets top="5" right="5" bottom="5" left="5" />
        </padding>
        <ToggleButton text="Lápis" styleClass="tool-button" selected="true">
            <toggleGroup>
                <ToggleGroup fx:id="toolsGroup" />
            </toggleGroup>
        </ToggleButton>
        <ToggleButton text="Borracha" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <ToggleButton text="Linha" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <Separator />
        <ToggleButton text="Retângulo" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <ToggleButton text="Circulo" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <ToggleButton text="Cilindro" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <ToggleButton text="Pirâmide" styleClass="tool-button" toggleGroup="$toolsGroup" />
        <Separator />
        <VBox spacing="2" styleClass="brush-settings">
            <Label text="Espessura" />
            <Slider fx:id="thicknessSlider" min="1" max="50" value="1" />
            <Label text="Opacidade" />
            <Slider fx:id="opacitySlider" min="0" max="1" value="1" />
        </VBox>
    </VBox>

    <StackPane fx:id="canvasContainer" styleClass="canvas-container" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <Canvas fx:id="drawingCanvas" width="1200" height="690" />
    </StackPane>

    <HBox styleClass="status-bar" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <padding>
            <Insets top="2" right="5" bottom="2" left="5" />
        </padding>
        <Label fx:id="coordinatesLabel" text="X: 0, Y: 0" />
        <Label fx:id="toolLabel" text="Ferramenta: Selecionar" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="canvasSizeLabel" text="1200 x 800 px" />
    </HBox>
</GridPane>
